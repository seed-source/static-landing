---
// CTA (Call-to-Action) Component
// Final conversion-focused section
// Customize heading, description, and button text

interface Props {
  heading?: string;
  description?: string;
  primaryButtonText?: string;
  primaryButtonUrl?: string;
  secondaryButtonText?: string;
  secondaryButtonUrl?: string;
}

const {
  heading = "Ready to accelerate your development?",
  description = "Start building with Seed & Source today. Free to get started, scale as you grow.",
  primaryButtonText = "Get Started Free",
  primaryButtonUrl = "/signup",
  secondaryButtonText = "Schedule Demo",
  secondaryButtonUrl = "/demo"
} = Astro.props;
---

<section class="relative isolate overflow-hidden bg-gradient-to-r from-primary-600 to-primary-500 px-6 py-32 sm:py-48 lg:px-8">
  <!-- Decorative background elements -->
  <div class="absolute -top-24 right-0 -z-10 transform-gpu blur-3xl" aria-hidden="true">
    <div
      class="aspect-[1404,1045] w-[87.75rem] bg-gradient-to-r from-primary-100 to-secondary-100 opacity-25"
      style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.5%, 92.5% 84.7%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 55.2% 11.8%, 30.8% 5.7%, 7.6% 41%, 35.95% 30%, 65.92% 68.3%, 26.2% 28.8%, 31.2% 74.8%, 71.8% 12.1%)"
    ></div>
  </div>

  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">
      {heading}
    </h2>
    <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-primary-100">
      {description}
    </p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <a
        href={primaryButtonUrl}
        class="btn bg-white text-primary-600 hover:bg-primary-50 px-6 py-3 text-lg font-semibold"
      >
        {primaryButtonText}
      </a>
      <a
        href={secondaryButtonUrl}
        class="btn text-lg font-semibold leading-6 text-white border-2 border-white hover:bg-white hover:bg-opacity-10 px-6 py-3"
      >
        {secondaryButtonText} â†’
      </a>
    </div>
  </div>
</section>
