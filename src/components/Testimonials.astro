---
/**
 * Testimonials.astro
 * Customer testimonials using the GlassPanel wrapper.
 * Features: responsive grid, glassmorphic design.
 */
import GlassPanel from './GlassPanel.astro';

interface Testimonial {
  quote: string;
  author: string;
  role: string;
  avatar: string;
}

interface Props {
  title?: string;
  testimonials?: Testimonial[];
}

const {
  title = "Voices from the Forest",
  testimonials = [
    {
      quote: "Seed & Source transformed our messy monolithic code into a clean, predictable garden of services.",
      author: "Alex Rivers",
      role: "CTO at ScaleStream",
      avatar: "https://i.pravatar.cc/150?u=alex"
    },
    {
      quote: "The architecture-first approach is exactly what we needed. We saved months of planning.",
      author: "Sarah Bloom",
      role: "Lead Architect at GreenOps",
      avatar: "https://i.pravatar.cc/150?u=sarah"
    },
    {
      quote: "It's the only boilerplate I've seen that actually handles enterprise-level concerns from day one.",
      author: "Marcus Thorne",
      role: "Founder of CloudHarbor",
      avatar: "https://i.pravatar.cc/150?u=marcus"
    }
  ]
} = Astro.props;
---

{/* [SS-FEATURE-TESTIMONIALS-START] */}
<section class="py-24 bg-white relative overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-extrabold text-center text-foundry-text mb-16">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {testimonials.map((t) => (
        <GlassPanel class="p-8 flex flex-col justify-between h-full hover:border-foundry-secondary/50 transition-colors">
          <div>
            <div class="text-foundry-secondary mb-6">
              <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 32 32">
                <path d="M10 8v8h6v-8zm10 0v8h6v-8z"></path>
              </svg>
            </div>
            <p class="text-lg text-foundry-text/80 italic leading-relaxed mb-6">"{t.quote}"</p>
          </div>
          
          <div class="flex items-center gap-4 border-t border-foundry-secondary/10 pt-6">
            <img src={t.avatar} alt={t.author} class="w-12 h-12 rounded-full border-2 border-foundry-secondary/30" />
            <div>
              <p class="font-bold text-foundry-text">{t.author}</p>
              <p class="text-sm text-foundry-secondary">{t.role}</p>
            </div>
          </div>
        </GlassPanel>
      ))}
    </div>
  </div>
</section>
{/* [SS-FEATURE-TESTIMONIALS-END] */}
