---
// Diagram.astro
// SVG-based diagram for Golden Path visualization
// Features: vine lines, organic paths

interface Props {
  pathColor?: string;
  class?: string;
  points?: { x: number; y: number; }[];
}

const { pathColor = '#10B981', class: className = '' } = Astro.props;
---

<div class:list={["absolute inset-0 w-full h-full z-0 pointer-events-none opacity-20", className]}>
  <svg 
    class="w-full h-full" 
    preserveAspectRatio="none" 
    viewBox="0 0 1000 400"
  >
    <path 
      d="M125,100 Q250,100 250,200 T375,300 Q500,300 500,100 T625,100 Q750,100 750,200 T875,300" 
      stroke={pathColor} 
      stroke-width="2" 
      fill="none" 
      stroke-dasharray="8,8" 
      class="vine-line"
    />
  </svg>
</div>

<style>
  .vine-line {
      stroke-dasharray: 1000;
      stroke-dashoffset: 1000;
      animation: grow 3s ease-out forwards;
  }
  @keyframes grow {
      to { stroke-dashoffset: 0; }
  }
</style>
