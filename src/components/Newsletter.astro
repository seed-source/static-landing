---
/**
 * Newsletter.astro
 * Minimalist newsletter signup component for Seed & Source.
 * Features: foundry-* design tokens, injection markers for opt-out logic.
 */

interface Props {
  title?: string;
  subtitle?: string;
  placeholder?: string;
  buttonText?: string;
}

const {
  title = "Cultivate Your Stack",
  subtitle = "Stay updated with the latest seeds, sources, and architecture patterns.",
  placeholder = "Enter your primary email",
  buttonText = "Join the Nursery"
} = Astro.props;
---

{/* [SS-FEATURE-NEWSLETTER-START] */}
<section class="py-16 bg-foundry-surface border-y border-foundry-secondary/10">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2 class="text-3xl font-bold text-foundry-text mb-4">{title}</h2>
    <p class="text-lg text-foundry-text/70 mb-8">{subtitle}</p>
    
    <form class="flex flex-col sm:flex-row gap-4 justify-center max-w-lg mx-auto">
      <input 
        type="email" 
        placeholder={placeholder}
        required
        class="flex-1 px-6 py-4 rounded-full border border-foundry-secondary/20 bg-white/50 backdrop-blur focus:outline-none focus:ring-2 focus:ring-foundry-secondary/50 text-foundry-text"
      />
      <button 
        type="submit"
        class="px-8 py-4 bg-foundry-primary text-white rounded-full font-semibold hover:bg-foundry-secondary transition-all transform hover:scale-105 active:scale-95 shadow-md hover:shadow-glow"
      >
        {buttonText}
      </button>
    </form>
    
    <p class="mt-4 text-xs text-foundry-text/40 italic">
      We honor your privacy like we honor our clean architecture. No spam, ever.
    </p>
  </div>
</section>
{/* [SS-FEATURE-NEWSLETTER-END] */}
