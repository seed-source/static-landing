---
// Ecosystem Component (Golden Path Architecture)
// Features animated "vine" lines and a responsive grid of growth stages.
import GlassPanel from './GlassPanel.astro';
import Diagram from './Diagram.astro';

interface Stage {
  title: string;
  icon: string;
  description: string;
  command: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  stages?: Stage[];
}

const {
  title = "Golden Path Architecture",
  subtitle = "Visualizing the organic growth of your project's infrastructure.",
  stages = []
} = Astro.props;
---

<section id="ecosystem" class="py-24 bg-foundry-surface/50 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20 animate-fade-in">
      <h2 class="font-serif text-5xl md:text-6xl font-bold text-foundry-primary mb-4">{title}</h2>
      <p class="text-foundry-text/60 max-w-2xl mx-auto text-lg italic">{subtitle}</p>
    </div>

    <div class="relative max-w-6xl mx-auto">
      <!-- Responsive Vine Lines (Animated) -->
      <Diagram />

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative z-10">
        {stages.map((stage, index) => (
          <GlassPanel 
            class:list={[
              "rounded-2xl p-8 border border-foundry-accent/10 shadow-xl hover:shadow-2xl hover:border-foundry-secondary transition-all group animate-fade-in-up",
              index % 2 !== 0 ? "mt-0 md:mt-24" : ""
            ]}
          >
            <div class="w-16 h-16 rounded-2xl bg-foundry-accent/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-sm">
              <span class="text-3xl">{stage.icon}</span>
            </div>
            <h3 class="font-serif font-bold text-2xl text-foundry-primary mb-3">{stage.title}</h3>
            <p class="text-foundry-text/70 text-base leading-relaxed mb-6">
              {stage.description}
            </p>
            <div class="flex items-center gap-2 text-xs font-mono text-foundry-secondary bg-foundry-secondary/10 w-fit px-3 py-1 rounded-full uppercase">
              <code>{stage.command}</code>
            </div>
          </GlassPanel>
        ))}
      </div>
    </div>
  </div>
</section>
