---
// SocialProof Component - Seed & Source Trust & Metrics
// Displays testimonials, metrics, and trusted brands

interface Testimonial {
  quote: string;
  author: string;
  role: string;
  company: string;
  avatar?: string;
}

interface Metric {
  value: string;
  label: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  testimonials?: Testimonial[];
  metrics?: Metric[];
}

const {
  title = "Trusted by Teams Building Serious Products",
  subtitle = "Join the growing community of scale-ups and agencies using Seed & Source",
  testimonials = [
    {
      quote: "Seed & Source cut our development time in half while improving code quality. The templates are production-ready and the documentation is outstanding.",
      author: "Sarah Johnson",
      role: "CTO",
      company: "TechStartup Inc"
    },
    {
      quote: "The Hexagonal Architecture approach forces good practices from day one. We had zero regrets adopting it across our engineering team.",
      author: "Michael Chen",
      role: "Engineering Lead",
      company: "CloudServices Co"
    },
    {
      quote: "Best investment we made for our agency. Our developers get projects launched 3x faster, and the client codebases are actually maintainable.",
      author: "Emma Rodriguez",
      role: "Founder",
      company: "DataDriven LLC"
    }
  ],
  metrics = [
    {
      value: "10,000+",
      label: "Downloads"
    },
    {
      value: "4.8/5",
      label: "Stars"
    },
    {
      value: "50+",
      label: "Companies"
    },
    {
      value: "100%",
      label: "Open Source"
    }
  ]
} = Astro.props;
---

<section class="py-20 sm:py-32 bg-gradient-to-b from-white to-gray-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {/* Header */}
    <div class="mx-auto max-w-3xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {title}
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {subtitle}
      </p>
    </div>

    {/* Metrics Grid */}
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-20 py-12 border-t border-b border-gray-200">
      {metrics.map((metric) => (
        <div class="text-center group">
          <div class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-teal-600 group-hover:from-emerald-700 group-hover:to-teal-700 transition-all">
            {metric.value}
          </div>
          <p class="mt-2 text-gray-600 font-medium">{metric.label}</p>
        </div>
      ))}
    </div>

    {/* Testimonials */}
    <div class="mb-20">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div
            class="relative group rounded-xl border border-gray-200 bg-white p-8 shadow-md hover:shadow-xl hover:border-emerald-300 transition-all duration-300"
          >
            {/* Star Rating */}
            <div class="flex items-center gap-1 mb-4">
              {[...Array(5)].map(() => (
                <svg class="h-5 w-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            {/* Quote */}
            <blockquote class="text-gray-700 leading-relaxed mb-6">
              "{testimonial.quote}"
            </blockquote>

            {/* Author */}
            <div class="flex items-center gap-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 text-white font-bold text-sm">
                {testimonial.author.split(' ').map(n => n[0]).join('')}
              </div>
              <div>
                <p class="font-semibold text-gray-900">{testimonial.author}</p>
                <p class="text-sm text-gray-600">{testimonial.role} at {testimonial.company}</p>
              </div>
            </div>

            {/* Hover Accent */}
            <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-emerald-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" />
          </div>
        ))}
      </div>
    </div>

    {/* Logo Cloud / Trusted By */}
    <div class="pt-12 border-t border-gray-200">
      <p class="text-center text-sm font-semibold text-gray-600 mb-10">
        Trusted by leading companies and open source communities
      </p>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center">
        {[...Array(6)].map((_, i) => (
          <div
            class={`group relative flex h-16 items-center justify-center rounded-lg bg-gray-100 px-6 py-4 transition-all hover:bg-gradient-to-br ${
              i % 2 === 0
                ? 'hover:from-emerald-50 hover:to-teal-50 hover:shadow-md'
                : 'hover:from-blue-50 hover:to-cyan-50 hover:shadow-md'
            }`}
          >
            <span class="text-xs font-semibold text-gray-400 group-hover:text-gray-600 transition-colors">
              {['TechCorp', 'DevFlow', 'StartupX', 'CloudPlatform', 'DataSys', 'InnovateLab'][i]}
            </span>
          </div>
        ))}
      </div>
      <p class="text-center text-xs text-gray-500 mt-8">
        Logos are placeholders. Add your actual customer logos here.
      </p>
    </div>
  </div>
</section>
