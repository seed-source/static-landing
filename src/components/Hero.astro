---
// Hero Component
// High-impact hero section with customizable headline, description, and CTAs
// Features: responsive design, gradient background, hero image support, smooth scroll animation
// TypeScript: Full prop type safety for customization

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryCTA?: {
    text: string;
    url: string;
  };
  secondaryCTA?: {
    text: string;
    url: string;
  };
  heroImage?: string;
  showHeroImage?: boolean;
}

const {
  title = "The Scale-Up Stack",
  subtitle = "Production-ready SaaS starter kits for founders and agencies",
  description = "Seed & Source accelerates your path to production with battle-tested templates for Python SaaS, Rails APIs, React clients, mobile apps, and data pipelines. Deploy in days, not weeks.",
  primaryCTA = { text: "Get Started", url: "/signup" },
  secondaryCTA = { text: "View Documentation", url: "/docs" },
  heroImage = "/hero.png",
  showHeroImage = true
} = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-20 sm:py-24 lg:py-32">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 -z-10 w-96 h-96 bg-primary-100 rounded-full blur-3xl opacity-20"></div>
  <div class="absolute bottom-0 right-0 -z-10 w-96 h-96 bg-secondary-100 rounded-full blur-3xl opacity-20"></div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Content -->
      <div class="flex flex-col justify-center">
        <!-- Badge/Tag -->
        <div class="mb-6 inline-flex w-fit">
          <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium bg-secondary-50 text-secondary-700 border border-secondary-200">
            ✨ Production-Ready Templates
          </span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight text-gray-900 leading-tight mb-6">
          {title}
        </h1>

        <!-- Subtitle -->
        <p class="text-xl text-gray-600 mb-4 font-semibold">
          {subtitle}
        </p>

        <!-- Description -->
        <p class="text-lg leading-relaxed text-gray-600 mb-8">
          {description}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
          <a
            href={primaryCTA.url}
            data-scroll-smooth
            class="btn btn-primary px-8 py-4 text-lg font-semibold shadow-lg hover:shadow-xl transform hover:scale-105"
            aria-label={primaryCTA.text}
          >
            <span>{primaryCTA.text}</span>
            <span class="ml-2">→</span>
          </a>
          <a
            href={secondaryCTA.url}
            class="btn btn-outline px-8 py-4 text-lg font-semibold hover:shadow-md transform hover:scale-105"
            aria-label={secondaryCTA.text}
          >
            {secondaryCTA.text}
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="mt-12 flex flex-col sm:flex-row sm:items-center gap-6 sm:gap-8 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-secondary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span>30+ Components & Patterns</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-secondary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span>Full TypeScript Support</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-secondary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span>Deploy in Hours</span>
          </div>
        </div>
      </div>

      <!-- Right: Hero Image -->
      {showHeroImage && (
        <div class="relative hidden lg:block">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl blur-2xl opacity-20"></div>
            <div class="relative bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl overflow-hidden shadow-2xl">
              <div class="aspect-square flex items-center justify-center">
                <div class="text-center text-gray-400 p-8">
                  <svg class="w-24 h-24 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <p class="font-semibold mb-2">Hero Showcase</p>
                  <p class="text-sm">Dashboard preview or demo video</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  // Smooth scroll animation for CTA buttons
  document.querySelectorAll('[data-scroll-smooth]').forEach(button => {
    button.addEventListener('click', (e) => {
      const href = button.getAttribute('href');
      
      // Only use smooth scroll for anchor links
      if (href && !href.startsWith('/')) {
        e.preventDefault();
        const element = document.querySelector(href);
        if (element) {
          element.scrollIntoView({ behavior: 'smooth' });
        }
      }
      
      // Add click animation
      button.style.transform = 'scale(0.98)';
      setTimeout(() => {
        button.style.transform = 'scale(1)';
      }, 100);
    });
  });
</script>

<style>
  :global(body) {
    scroll-behavior: smooth;
  }
</style>
