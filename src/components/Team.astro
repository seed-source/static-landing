---
/**
 * Team.astro
 * Simple bio grid for the Seed & Source ecosystem contributors.
 */

interface Member {
  name: string;
  role: string;
  bio: string;
  avatar: string;
}

interface Props {
  title?: string;
  members?: Member[];
}

const {
  title = "The Seed Collectors",
  members = [
    {
      name: "Miguel Ricaro",
      role: "Core Architect",
      bio: "Master of hexagons and containerization. Building the foundations of the future.",
      avatar: "https://i.pravatar.cc/150?u=miguel"
    },
    {
      name: "Elena Bloom",
      role: "Design Lead",
      bio: "Crafting organic interfaces that feel as natural as they are functional.",
      avatar: "https://i.pravatar.cc/150?u=elena"
    }
  ]
} = Astro.props;
---

{/* [SS-FEATURE-TEAM-START] */}
<section class="py-24 bg-white border-t border-foundry-secondary/5">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-20">
      <h2 class="text-4xl font-bold text-foundry-text mb-4">{title}</h2>
      <div class="w-24 h-1 bg-foundry-accent mx-auto"></div>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-16 max-w-4xl mx-auto">
      {members.map((member) => (
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8 text-center md:text-left">
          <div class="flex-shrink-0">
            <img src={member.avatar} alt={member.name} class="w-32 h-32 rounded-2xl shadow-lg border-b-4 border-foundry-secondary" />
          </div>
          <div>
            <h3 class="text-2xl font-bold text-foundry-text">{member.name}</h3>
            <p class="text-foundry-secondary font-mono text-sm mb-4 uppercase tracking-tighter">{member.role}</p>
            <p class="text-foundry-text/70 leading-relaxed">{member.bio}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
{/* [SS-FEATURE-TEAM-END] */}
