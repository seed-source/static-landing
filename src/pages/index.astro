---
// Main landing page
// Imports and assembles all page sections: Hero, Features, Social Proof, Pricing, FAQ, and CTA
// Wrapped in Layout component for consistent header, footer, and styling

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Ecosystem from '../components/Ecosystem.astro';
import CodeSoil from '../components/CodeSoil.astro';
import Features from '../components/Features.astro';
import CTA from '../components/CTA.astro';

const title = "Seed & Source | Plant the Future, Source the Scale";
const description = "The multidisciplinary foundation for SaaS, Mobile, and Creative projects. Bootstrap your next 'seed' with production-grade architecture.";
const canonicalUrl = "https://seedsource.dev";

// Select your theme: 'emerald' | 'midnight' | 'crimson' | 'amber'
const activeTheme = 'emerald';
---

<Layout 
  title={title}
  description={description}
  theme={activeTheme}
>
  <!-- Hero Section -->
  <Hero />

  <!-- Ecosystem / Golden Path -->
  <Ecosystem />

  <!-- Code as Soil -->
  <CodeSoil />

  <!-- Features Section (Generic but themed) -->
  <Features
    id="features"
    title="Multidisciplinary Mastery"
  />

  <!-- Final CTA Section -->
  <CTA
    heading="Plant your seed today."
    description="Get early access to the sscli and the Flourishing Foundry ecosystem."
    primaryButtonText="Get Alpha Access"
    primaryButtonUrl="/signup"
    secondaryButtonText="Read the Playbook"
    secondaryButtonUrl="https://docs.seedsource.dev"
  />
</Layout>
